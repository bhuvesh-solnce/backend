            content: '';
            width: 5px;
            height: 100%;
            background-color: #DEB241;
            position: absolute;
            top: 0;
            left: 0px;
        }

        table {
            border-collapse: collapse;
            border: 1px solid black;
            width: 100%;
        }

        td,
        th {
            border-right: 1px solid black;
            /* Border between columns */
            padding: 5px;
            /* Optional: Add padding for cell content */
        }

        /* Optional: Remove border from last column */
        td:last-child,
        th:last-child {
            border-right: none;
        }

        th.normal {
            border: none;
        }

        td.normal {
            border: none;
        }


    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
        }

        body {
            width: 100vw;
        }

        .page {
            height: calc(100vh - 4rem);
            padding: 2rem 3.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .homepage {
            height: 100vh;
            padding: 0px 3.5rem;
        }

        .banner-logo {
            width: 320px;
            height: 160px;
        }

        .banner-heading {
            margin-top: auto;
            font-size: 2rem;
            color: #1a1a1a;
            font-weight: 600;
            font-family: "Poppins";
            line-height: normal;
            letter-spacing: 1px;
        }

        .homepage-background {
            background-image: url({{home_background}});
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center bottom;
        }

        .home-section {
            padding-top: 15rem;
        }

        .text-primary-color {
            color: #0B65BD;
        }

        .header-section {
            display: flex;
            justify-content: end;
        }

        .heading-logo {
            width: 152px;
            height: 76px;
        }

        .text-bold {
            font-weight: bold;
        }

        .text-bolder {
            font-weight: bolder;
        }

        .my-2 {
            margin: 1.5rem 0rem;
        }

        .page-bottom {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
            font-size: 11px;
        }

        hr {
            width: 100%;
            height: 0.2px;
            background-color: #1a1a1a;
        }

        .heading {
            color: #0B65BD;
            font-family: 'Poppins', sans-serif;
            font-size: 21px;
            font-style: normal;
            font-weight: 600;
            line-height: normal;
            position: relative;
            margin-left: 1rem;
        }

        .heading::before {
            content: '';
            width: 5px;
            height: 100%;
            background-color: #DEB241;
            position: absolute;
            top: 0;
            left: -12px;
        }

        .bank-partner {
            display: flex;
            gap: 0.1rem;
            flex-wrap: wrap;
        }

        .bank-logo {
            padding: 0.2rem;
            mix-blend-mode: multiply;
        }

        .reowned-clients-list {
            display: flex;
            flex-wrap: wrap;
        }

        .reowned-client-info {
            display: flex;
            flex-direction: column;
            padding: 0.5rem;
        }

        .reowned-client-desc {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            position: relative;
            padding-left: 5px;
        }

        .reowned-client-desc::before {
            content: '';
            width: 2px;
            height: 100%;
            background-color: #DEB241;
            position: absolute;
            top: 0;
            left: 0px;
        }

        td {
            padding: 0.6rem;
        }

        th {
            padding: 0.6rem;
        }

        .financial-info-section {
            font-size: 13px;
            margin-top: 2rem;
        }

        .estimated-savings-block {
            padding: 2rem 0;
            display: flex;
            justify-content: space-between;
            color: white;
        }

        .estimated-savings-info {
            background-color: #0B65BC;
            padding: 1rem 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            font-size: 14px;
        }

        .horizontal-line {
            height: 2px;
            border: none;
            background-color: #DEB241;
            width: 70px;
        }

        .predicated-energy-output {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .predicated-energy-output-block {
            display: flex;
        }

        .predicated-energy-output-img {
            width: 140px;
            height: 120px;
            background-color: #0B65BC;
        }

        .predicated-energy-output-info {
            width: 150px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1rem;
            font-size: 14px;
            align-items: center;
            background-color: lightgray;
        }

        ul li {
            margin-left: 1.2rem;
        }

        .scope-of-work-block {
            display: flex;
            gap: 1rem;
            padding: 1rem;
        }

        .scope-of-work-img {
            width: 210px;
            height: 140px;
        }

        .scope-of-work-info ol li {
            font-size: 12px;
            margin-left: 1.2rem;
        }

        .financial-consideration-info ol li {
            margin-left: 1.2rem;
        }

        .terms-conditions-info ol li {
            margin-left: 1.2rem;
        }

        ol {
            list-style-type: none;
            counter-reset: list-counter;
            font-size: 16px;
        }

        ol[type="a"] li::before {
            content: counter(list-counter, lower-alpha) ". ";
            counter-increment: list-counter;
            font-weight: bold;
            color: #DEB241;
        }


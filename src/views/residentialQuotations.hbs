            border-collapse: collapse;
            padding: 0.5rem 1rem;
        }

        th {
            background-color: #0B65BC;
            color: white;
            font-weight: normal;
            min-height: 52px;
            height: 52px;
            font-weight: 500;
            font-size: 16px;
        }

        tr {
            min-height: 52px;
            height: 52px;
        }

        #quotation tr>td:nth-child(2) {
            text-align: left;
        }

        tr>td:nth-child(n/2) {
            background-color: lightgray;
        }

        .logo {

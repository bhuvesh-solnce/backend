        .logo-text-big {
            font-weight: 600;
            color: #0B65BC;
            font-size: 21.6px;
        }

        .details {
            font-weight: 400;
            font-size: 15.5px;
            line-height: 1.35;
        }

        .name,
        .date {
            font-weight: 600;
            font-size: 15.5px;
        }

        .title-box {
            background-color: #0B65BC;
            color: white;
            font-size: 13.5px;
            font-weight: 500;
            width: fit-content;
            padding: 0.3rem 1rem 0.3rem 3rem;
            margin-left: -3rem;
            margin-bottom: 0.5rem;
            margin-top: -1.0rem;
        }

        .notes {
            font-size: 15.5px;
            font-weight: 400;
        }

        ul li::marker {
            color: #0B65BC;
        }

        .fill-icon {
            height: 28px;
            width: 28px;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%
        }

        .icon-image {
            width: 14px;
            height: 14px;
        }

        .footer-text {
            font-size: 15px;
            font-weight: 500;
        }

        .p2 tr>td {
            font-weight: 500;
            font-size: 13.5px;
        }

        .heading {
